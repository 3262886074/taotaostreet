<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tts.dao.HomeDao">
	<resultMap type="Commodity" id="commodityMap">
		<id property="cid" column="c_id" />
		<result property="cname" column="c_name" />
		<!-- property 表示pojo中的属性名称 javaType 表示java的实体类 -->
		<association property="cp_image_one" javaType="Commodity_pics">
			<id property="cpId" column="cp_id" />
			<result property="cp_image_two" column="cp_img_two" />
		</association>
	</resultMap>
	<select id="cnameQuery" parameterType="String" resultMap="commodityMap">
		select
		* from commodity c,commodity_pice cp where c.c_id=cp.c_id
	</select>
</mapper>
